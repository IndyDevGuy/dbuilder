{% trans_default_domain 'FOSUserBundle' %}
<form class="form-signin" action="{{ path("fos_user_registration_register") }}" method="post">
    <a href="/"><img class="mb-4" src="/images/logos/disciplebuilder.png" alt="" width="100%"></a>
    <h1 class="h3 mb-3 font-weight-normal">User Registration</h1>
    <label for="email" class="sr-only">Email</label>
    <input type="email" id="email" class="form-control" placeholder="Email" name="fos_user_registration_form[email]" autofocus="true" value="" required="required" />
    <label for="username" class="sr-only">Username</label>
    <input type="text" id="username" class="form-control" placeholder="Username" name="fos_user_registration_form[username]" autofocus="" value="" required="required" />
    <label for="password" class="sr-only">Password</label>
    <input type="password" id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" required="required" class="form-control" placeholder="Password" />
    
    <input type="password" id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" required="required" class="form-control" placeholder="Confirm Password"  autocomplete="new-password">
    
    {{form_widget(form._token)}}
    <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'registration.submit'|trans }}" />
    <p class="mt-5 mb-3 text-muted">Â© 2018 Disciple Builder</p>
    
</form>
