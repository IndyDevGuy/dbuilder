{% block body %}
    
{% endblock %}
{% block modal %}
    <div class="modal" id="applicationModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Disciple Builder Application</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="shake" id="application_form" action="/" method="post" enctype="multipart/form-data">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">@</span>
                            </div>
                            {{form_widget(form.email)}}
                            <div class="valid-email valid-feedback" style="display:none;">
                                    Looks good!
                                </div>
                                <div class="invalid-email invalid-feedback" style="display:none;">
                                    Please check your email
                                </div>
                        </div>
                        <div class="form-group mb-3">
                            <div class="input-group">    
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="">Your Name</span>
                                </div>
                                {{form_widget(form.firstname)}}
                                {{form_widget(form.lastname)}}
                                <div class="valid-name valid-feedback" style="display:none;">
                                    Looks good!
                                </div>
                                <div class="invalid-name invalid-feedback" style="display:none;">
                                    Please check your first and last name
                                </div>
                            </div>
                        </div>
                                
                        <div class="form-group mb-3">
                            <div class="input-group">    
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="">Address</span>
                                </div>
                                {{form_widget(form.address)}}
                                {{form_widget(form.zip)}}
                                {{form_widget(form.country)}}
                                <div class="valid-address valid-feedback" style="display:none;">
                                    Looks good!
                                </div>
                                <div class="invalid-address invalid-feedback" style="display:none;">
                                    Please check your address
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="q1" class="">How many construction projects have you been involved in? (Describe)</label>
                            {{form_widget(form.q1)}}
                            <div class="valid-q1 valid-feedback" style="display:none;">
                                Looks good!
                            </div>
                            <div class="invalid-q1 invalid-feedback" style="display:none;">
                                 This field cannot be blank
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="q2" class="">What where your role(s) within these projects? (Optional)</label>
                            {{form_widget(form.q2)}}
                        </div>
                        <div class="form-group">
                            <label for="q3" class="">How did you hear about Disciple Builder? (Optional)</label>
                            {{form_widget(form.q3)}}
                            <div class="valid-q3 valid-feedback" style="display:none;">
                                Looks good!
                            </div>
                            <div class="invalid-q3 invalid-feedback" style="display:none;">
                                This field cannot be blank
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="q4" class="">If Other please describe: (Optional)</label>
                            {{form_widget(form.q4)}}
                            <div class="valid-q4 valid-feedback" style="display:none;">
                                Looks good!
                            </div>
                            <div class="invalid-q4 invalid-feedback" style="display:none;">
                                This field cannot be blank
                            </div>
                            {{ form_row(form.resumeFile) }}
                            <div class="valid-feedback valid-file" style="display:none;">
                                Looks good!
                            </div>
                            <div class="invalid-feedback invalid-file" style="display:none;">
                                File must be in pdf format and is required.
                            </div>
                            {{form_widget(form._token)}}
                        </div>
                    </form>
                    <div class="col-lg-12 text-center">
                        <p>*Disciple Builder will not share your information with any third party or person(s).</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="application_submit" type="submit" class="btn btn-primary">Submit App</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
                            
    <div class="modal" id="informationModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Request For More Information</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="shake" id="information_form" action="/" method="post">
