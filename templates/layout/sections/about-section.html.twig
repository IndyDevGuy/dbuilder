<section class="bg-primary" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-heading text-white">{{config.abouttitle}}</h2>
                <hr class="light my-4">
                <p class="text-faded mb-4">{{config.aboutdescriptionshort}} <br /><a style="color:#fff;" href="#" data-toggle="modal" aria-hidden="true" data-target="#aboutModal">Read More</a></p>
                <a class="btn btn-light btn-xl js-scroll-trigger" href="#services">How It Works</a>
            </div>
        </div>
    </div>
</section>
<div class="modal" id="aboutModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">About Disciple Builder</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{config.aboutdescription|raw}}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>